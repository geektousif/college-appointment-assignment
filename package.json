{
    "name": "backend",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "devrun": "nodemon dist/index.js",
        "dev": "concurrently \"npm run watch\" \"npm run devrun\"",
        "start": "node dist/index.js",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix .",
        "prettier": "prettier --check **/*.ts",
        "prettier:fix": "prettier --write **/*.ts",
        "db:generate": "drizzle-kit generate --config=src/config/drizzle.config.ts",
        "db:migrate": "drizzle-kit migrate --config=src/config/drizzle.config.ts",
        "test": "jest",
        "test:e2e": "docker-compose -f docker-compose.test.yml up --force-recreate --build -d && jest -- --config=jest.config.ts ./tests/e2e && docker-compose -f docker-compose.test.yml down -v"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "drizzle-orm": "^0.38.2",
        "drizzle-seed": "^0.1.3",
        "drizzle-zod": "^0.6.0",
        "express": "^4.21.2",
        "http-status-codes": "^2.3.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "pg": "^8.13.1",
        "winston": "^3.17.0",
        "zod": "^3.24.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.8",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/morgan": "^1.9.9",
        "@types/pg": "^8.11.10",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.18.0",
        "@typescript-eslint/parser": "^8.18.0",
        "concurrently": "^9.1.0",
        "drizzle-kit": "^0.30.1",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.1",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.11",
        "nodemon": "^3.1.7",
        "prettier": "^3.4.2",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.18.1",
        "wait-on": "^8.0.1"
    }
}
